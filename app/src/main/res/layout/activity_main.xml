<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Pista de la provincia (movida arriba) -->
    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca: Buenos Aires"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mapa de Argentina -->
    <com.example.bombaloca.ArgentinaMapView
        android:id="@+id/argentinaMapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/questionTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de Controles Lateral (lado derecho) -->
    <LinearLayout
        android:id="@+id/controlsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Estado de la Bomba -->
        <ImageView
            android:id="@+id/bombStateIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/bomb_healthy"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <!-- Separador visual -->
        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <!-- Controles de Zoom -->
        <Button
            android:id="@+id/zoomInButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <Button
            android:id="@+id/zoomOutButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="🎯"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Separador visual -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="2dp" />

        <!-- Controles Direccionales -->
        <!-- Botón Arriba -->
        <Button
            android:id="@+id/upButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="⬆️"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp" />

        <!-- Fila con Izquierda y Derecha -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/leftButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:text="⬅️"
                android:textSize="16sp"
                android:layout_marginEnd="1dp" />

            <Button
                android:id="@+id/rightButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:text="➡️"
                android:textSize="16sp"
                android:layout_marginStart="1dp" />

        </LinearLayout>

        <!-- Botón Abajo -->
        <Button
            android:id="@+id/downButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="⬇️"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp" />

    </LinearLayout>


    <!-- Botones de control -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/restartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Juego"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Overlay de explosiones múltiples (inicialmente ocultas) -->
    <!-- Explosión central (más grande) -->
    <ImageView
        android:id="@+id/explosionImageView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/explosion_icon"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Explosión superior izquierda -->
    <ImageView
        android:id="@+id/explosionImageView2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/explosion_icon"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="60dp" />

    <!-- Explosión inferior derecha -->
    <ImageView
        android:id="@+id/explosionImageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/explosion_icon"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="80dp" />

    <!-- Overlay de victoria (inicialmente oculto) -->
    <TextView
        android:id="@+id/victoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🎉🇦🇷 ¡SALVASTE A ARGENTINA! 🇦🇷🎉\n¡Desactivaste la Bomba Loca a tiempo!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:background="#E8F5E8"
        android:padding="24dp"
        android:visibility="gone"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 